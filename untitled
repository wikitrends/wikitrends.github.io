                .style("text-anchor", "end")
                //.text("Ratings");

            svg.append("path")
                .datum(data)
                .attr("class", "upperline")
                .attr("d", upperline)
                .attr("fill", "none")
                .attr("stroke", "#3FC380")
                .attr("stroke-width", "1px")


         // var imgs = svgImage.selectAll("image").data([0]);
