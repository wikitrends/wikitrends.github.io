                .scale(y)
                .orient("left");

            var upperline = d3.svg.line()
                .interpolate(interpolation)
                .x(function(d) {
                    return x(parseDate(d.key));
                })
                .y(function(d) {

                    // console.log(d[plotParameter])

                    return y(d.values);
                    // }
                    // } else {
                    //     return y(0)
                    // }
                });

            // var bottomline = d3.svg.line()
            //     .interpolate(interpolation)
