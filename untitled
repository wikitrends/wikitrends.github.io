                    left: 50
                },
                width = 1008 - margin.left - margin.right,
                height = 572 - margin.top - margin.bottom;

            //var parseDate = d3.time.format.utc("%Y-%m-%dT%H:%M:%SZ").parse;
            var parseDate = d3.time.format.utc("%Y-%m-%dT%H:%M:%S.%LZ").parse;

            var x = d3.time.scale()
                .range([30, width]);

            var y = d3.scale.linear()
                .range([height, 0]);

